<%- include ("./partials/header") %>

    <body>
        <%-include ("./partials/homenav") %>
            <div class="container">
                <br>
                <hr>
                <div class="card">
                    <div class="card-header">
                        <h3>
                            <%= category.titulo %>
                        </h3>
                    </div>
                    <div class="card-body">
                        <h1>
                            <hr> Artigos Da Categoria "
                            <%= category.titulo %>" :
                                <hr>
                        </h1>
                        <br>
                        <% article.forEach((article) => { %>
                            <div class="card">
                                <div class="card-header">
                                    <h3>
                                        <%= article.titulo %>
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <a href="/<%= article.slug %>" class="btn btn-primary">Ler o Artigo</a>
                                </div>
                            </div>

                            <% }) %>
                    </div>
                </div>
    </body>

    <%-include ("./partials/footer") %>