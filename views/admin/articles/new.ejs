<%- include ("../../partials/header") %>

    <body>
        <%-include ("../../partials/navbar") %>

            <div class="container">
                <hr>
                <div class="card">
                    <div class="card-header">
                        <h2>Cadastro de Artigos</h2>
                    </div>
                    <div class="card-body">
                        <form action="/articles/save" method="POST">
                            <input class="form-control" type="text" name="titulo" placeholder="Titulo do Artigo">
                            <textarea id="article" class="form-control" placeholder="Escreva o Artigo Aqui" name="body"></textarea>
                            <br>
                            <label>Categoria</label>
                            <select class="form-control" name="category">
                                <% categories.forEach((category) => { %>
                                    <option value = "<%= category.id %>"><%= category.titulo %></option>
                                <%})%>
                            </select>
                            <br>
                            <button class="btn btn-primary">Cadastrar</button>
                        </form>
                    </div>
                </div>
            </div>
    </body>

    <%-include ("../../partials/footer") %>

        <script src="/tinymce/tinymce.min.js"></script>
        <script>
            tinymce.init({
                language: 'pt_BR',
                selector: "#article",
                plugins: "advlist autolink link image lists print preview hr searchreplace wordcount fullscreen media save table"

            })
        </script>