<%- include ("../../partials/header") %>

    <body>
        <%-include ("../../partials/navbar") %>

            <div class="container">
                <hr>
                <h2>Categorias</h2>
                <br>
                <a class="btn btn-primary" href="/admin/categories/new"> Criar Nova Categoria</a>
                <hr>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Titulo</th>
                            <th>Slug</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <% categories.forEach(category => { %>
                        <tbody>
                            <tr>
                                <th>
                                    <%= category.id %>
                                </th>
                                <th>
                                    <%= category.titulo %>
                                </th>
                                <th>
                                    <%= category.slug %>
                                </th>
                                <th><a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>
                                    <form style="display: inline" action="/categories/delete" method="POST" onsubmit="confirmar(event, this)">
                                        <input type="hidden" name="id" value=" <%= category.id %>">
                                        <button type="submit" class="btn btn-danger">Deletar</button></th>
                                </form>
                            </tr>

                            <% }) %>
                        </tbody>

                </table>
            </div>

    </body>

    <%- include("../../partials/footer") %>
        <script>
            function confirmar(event, form) {
                event.preventDefault();

                var decision = confirm("Você Realmente Deseja Deletar essa Categoria? ")
                if (decision) {
                    form.submit();
                }
            }
        </script>